{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}
	<main class="max-w-screen-lg mx-auto py-5 md:py-16 px-4">
		<h1 class="text-5xl text-center font-semibold mb-8">{{"Welcome on Petit Blog Sympa"|trans}}</h1>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
			{% for item in articles %}
				<div class="shadow-lg rounded-md p-4 md:p-6 mb-4 flex flex-col border relative">
					{% if item.isPremium %}
						<div class="absolute bottom-0 left-0 bg-yellow-100 rounded-bl-md rounded-tr-md py-1 px-2 text-sm flex items-center gap-2">
							{{ ux_icon('mdi:star-outline', { 'class': 'h-4 w-4' }) }}
							{{'Premium'|trans}}
						</div>
					{% endif %}
					<h5 class="mb-1">{{ item.title|slice(0,40) }}...</h5>
					<p class="text-slate-600 mb-2 text-sm">{{ item.content|slice(0,100) }}...</p>
					<div class="flex justify-between">
						<a href="{{ path('article_show', {'id': item.id}) }}" class="bg-blue-100 rounded-md py-2 px-3 text-sm hover:bg-blue-200 self-end w-fit transition-all duration-200 ease-in-out">
							{{'check it'|trans}}
						</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</main>
{% endblock %}
